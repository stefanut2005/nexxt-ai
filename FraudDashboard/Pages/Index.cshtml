@page
@model FraudDashboard.Pages.IndexModel
@{
    var top5 = Model.Transactions
        .OrderByDescending(t => t.Risk)
        .Take(5)
        .ToList();
}

<div class="page-inner">

    <div class="card card-tight">
        <div class="card-header" style="margin-bottom:.5rem;">
            <div>
                <div class="card-title" style="font-size:1.1rem;">High Risk Today</div>
                <div class="card-subtitle">Live fraud risk across recent transactions</div>
            </div>
        </div>

        <div class="kpi-grid">
            <div class="kpi-card">
                <div class="kpi-label">High Risk (>=80%)</div>
                <div class="kpi-value">@Model.HighRiskToday</div>
                <div class="kpi-desc">Needs manual review</div>
            </div>

            <div class="kpi-card">
                <div class="kpi-label">Average Risk</div>
                <div class="kpi-value">
                    @Math.Round(Model.AvgRisk, 1)%
                </div>
                <div class="kpi-desc">Across last @Model.Transactions.Count tx</div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div>
                <div class="card-title">Top Risky Transactions</div>
                <div class="card-subtitle">Highest fraud probability right now</div>
            </div>
            <a asp-page="/Transactions/Index" class="btn btn-primary">View all</a>
        </div>

        <div class="table-wrapper">
            <table class="tx-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Merchant</th>
                        <th>Amount</th>
                        <th>When</th>
                        <th>Risk</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in top5)
                    {
                    <tr class="tx-row" data-tx-id="@t.Id">
                        <td>@t.Id</td>
                        <td>@t.Merchant</td>
                        <td>@t.Amount @t.Currency</td>
                        <td>@t.Timestamp.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <span class="risk-chip @GetRiskClass(t.Risk)">@Math.Round(t.Risk,1)%</span>
                        </td>
                        <td>
                            <span class="status-badge @GetStatusClass(t.Risk)">@t.RiskLabel</span>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div>
                <div class="card-title">Risk Score Distribution</div>
                <div class="card-subtitle">How fraud scores are distributed</div>
            </div>
        </div>

        <div class="card-body">
            <div style="width:100%; max-width:600px;">
                <canvas id="riskHistogramChart" height="200"></canvas>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const riskHistogramData = [
            @Html.Raw(string.Join(",", Model.RiskHistogram.Select(bin =>
                $"{{ score: {bin.ScoreBin.ToString(System.Globalization.CultureInfo.InvariantCulture)}, count: {bin.Count} }}"
            )))
        ];

        riskHistogramData.sort((a, b) => a.score - b.score);

        const labels = riskHistogramData.map(p => p.score.toFixed(1));
        const counts = riskHistogramData.map(p => p.count);

        const barColors = riskHistogramData.map(p => {
            if (p.score < 0.3) return "rgba(0, 128, 0, 0.6)";
            if (p.score <= 0.7) return "rgba(255, 165, 0, 0.6)";
            return "rgba(255, 0, 0, 0.6)";
        });

        const ctx = document.getElementById('riskHistogramChart').getContext('2d');
        const riskChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Count',
                    data: counts,
                    backgroundColor: barColors,
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        title: {
                            display: true,
                            text: 'Risk score (binned @@ 0.1)'
                        },
                        ticks: {
                            autoSkip: true,
                            maxRotation: 0,
                            minRotation: 0
                        }
                    },
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Transactions'
                        }
                    }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            label: function(ctx) {
                                const scoreLabel = ctx.label;
                                const cnt = ctx.raw;
                                return `score ${scoreLabel}: ${cnt} tx`;
                            }
                        }
                    }
                }
            }
        });
    </script>
}

@functions {
    string GetRiskClass(double risk)
    {
        if (risk >= 80) return "risk-high";
        if (risk >= 40) return "risk-mid";
        return "risk-low";
    }

    string GetStatusClass(double risk)
    {
        if (risk >= 80) return "status-high";
        if (risk >= 40) return "status-mid";
        return "status-low";
    }
}
